<view class="musicDetailContainer">
  <view class="musicname">{{songs[0].name}}</view>
  <view class="author">{{songs[0].ar[0].name}}</view>
  <!-- 摇杆 -->
  <view>
    <view class="pedestal"></view>
    <image class="rocker {{isPlay&&'needleRotate'}}" src="/static/images/song/needle.png"></image>
  </view>
  <!-- 中间唱片区域 -->
  <view class="discContainer {{isPlay&&'discAnimation'}}">
    <image class='disc' src="/static/images/song/disc.png"></image>
    <image class="musicImg" src="{{songs[0].al.picUrl}}"></image>
  </view>
  <!-- 进度条控制区域 -->
  <view class="progressControl">
    <text>{{Time}}</text>
    <!-- 总进度条 -->
    <view class="barControl">
      <!-- 实时进度条 -->
      <view class="audio-currentTime-Bar" style="width:{{currentWidth+'rpx'}}">
        <!-- 小圆球 -->
        <view class="audio-circle"></view>
      </view>
    </view>
    <text>{{durationTime}}</text>
  </view>
  <!-- 底部控制播放区域 --> 
  <view class="musicControl">
    <text class="iconfont icon-suijibofang"></text>
    <text class="iconfont icon-shangyishoushangyige" id="pre" bindtap="handleSwitch"></text>
    <text class="iconfont {{isPlay?'icon-zanting': 'icon-bofang'}} big" bindtap="changePlay"></text>
    <text class="iconfont icon-xiayigexiayishou" id="next" bindtap="handleSwitch"></text>
    <text class="iconfont icon-gedan"></text>
  </view>
</view>