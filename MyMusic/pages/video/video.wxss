
/* 头部区域 */
.header{
  display:flex;
}
.header image{
   width: 60rpx;
   height: 60rpx;
}
.search{
  flex:1;
  line-height: 60rpx;
  text-align: center;
  padding: 0 30rpx;
  background-color:gainsboro;
  border-radius: 20rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}
/* 导航部分 */
.navScroll{
  display: flex;
  white-space: nowrap;
  height: 80rpx;
}
.navItem{
  height: 60rpx;
  padding: 0 30rpx;
  width: 120rpx;
}
.navContent{
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
}
.navItem .active{
  border-bottom: 2px solid red;
}

/* 视频列表 */
.videoScroll {
  margin-top: 10rpx;
  /* calc: 可以动态计算css的宽高， 运算符左右两侧必须加空格，否则计算会失效 */
  /* 视口单位： vh vw  1vh = 1%的视口高度  1vw = 1%的视口宽度*/
  height: calc(100vh - 152rpx);
  /*height: calc(100vh - 100rpx); 用来测试页面上拉触底*/
}
.videoItem {
  padding: 0 3%;
}
