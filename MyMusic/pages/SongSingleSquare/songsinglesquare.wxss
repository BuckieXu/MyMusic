.squareContainer{
  padding:20rpx;

}
 .navContainer{

  position: relative;
} 
.navScroll{
  width: 90%;
  background-color: white;
}
.fenlei{
  position: absolute; 
  right: 10rpx;
  top: 10rpx;
  color: black;
  font-size: large;
}
/* 导航部分 */
.navScroll{
  display: flex;
  white-space: nowrap;
  height: 80rpx;
}
.navItem{
  height: 60rpx;
  padding: 0 30rpx;
  width: 120rpx;
}
.navContent{
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 28rpx;
}
.active{
  border-bottom: 2rpx solid red;
}
/* 下方歌单展示 */
.displayMusic{
  display: flex;
  flex-direction:row;
  width: 100%;
  flex-flow: wrap;
}
.playlistItem{
  height: 260rpx;
  width: 200rpx;
  margin-left: 30rpx;
  margin-bottom: 30rpx;
  
}
.playlistItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}
.singlename{
  font-size: 24rpx;
  height: 60rpx;
  -webkit-box-orient: vertical;
  /* white-space: nowrap; */
  overflow: hidden;
  text-overflow: ellipsis;
}
